FROM python:3.9.6-slim-buster

WORKDIR    /opt/mssql

RUN        apt-get update && apt-get install -y mssql-tools

WORKDIR /app
ADD . .
RUN pip install poetry && poetry config virtualenvs.create false && poetry install --no-dev -vv -E mssql -E trino

EXPOSE 8000
CMD ["uvicorn","watchmen_rest_doll.main:app","--host", "0.0.0.0", "--port", "8000"]






