FROM python:3.9.6-slim-buster

WORKDIR    /opt/mssql

RUN        apt-get update && apt-get install -y curl gnupg2 gcc g++ && curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - \
           && curl https://packages.microsoft.com/config/debian/11/prod.list > /etc/apt/sources.list.d/mssql-release.list \
           && apt-get update \
           && ACCEPT_EULA=Y apt-get install -y msodbcsql17 unixodbc-dev

WORKDIR /app
COPY . .
WORKDIR /app/packages/watchmen-rest-indicator
RUN pip install poetry && poetry config virtualenvs.create false && poetry lock && poetry install --no-dev -vv -E mssql -E trino

EXPOSE 8009
CMD ["uvicorn","watchmen_rest_indicator.main:app","--host", "0.0.0.0", "--port", "8009"]






