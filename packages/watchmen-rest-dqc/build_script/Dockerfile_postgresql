FROM python:3.12.11-slim-bookworm

WORKDIR /app
RUN apt-get update && apt-get install -y build-essential
ADD . .
RUN pip install --upgrade pip setuptools wheel && pip install poetry && poetry config virtualenvs.create false && poetry install --without dev -vv -E postgresql

EXPOSE 8090
CMD ["uvicorn","watchmen_rest_dqc.main:app","--host", "0.0.0.0", "--port", "8090"]






