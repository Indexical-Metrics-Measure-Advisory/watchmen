FROM python:3.12.4-slim-bullseye

WORKDIR /app
ADD . .
RUN pip install --upgrade pip setuptools wheel && pip install poetry && poetry config virtualenvs.create false && poetry install --no-dev -vv -E postgresql

EXPOSE 8090
CMD ["uvicorn","watchmen_rest_dqc.main:app","--host", "0.0.0.0", "--port", "8090"]






