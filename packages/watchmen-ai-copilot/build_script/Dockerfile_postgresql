FROM python:3.12.4-slim-bullseye

WORKDIR /app
ADD . .
RUN pip install dspy==2.5.43 && pip install lancedb && pip install poetry && poetry config virtualenvs.create false && poetry install --without dev -vv -E postgresql -E trino

EXPOSE 8900
CMD ["uvicorn","watchmen_ai.main:app","--host", "0.0.0.0", "--port", "8900"]






