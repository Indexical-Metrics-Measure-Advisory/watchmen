FROM python:3.12.4-slim-bullseye

WORKDIR /app
ADD . .
RUN pip install dspy && pip install lancedb
RUN pip install poetry && poetry config virtualenvs.create false && poetry install --no-dev -vv -E postgresql -E trino

EXPOSE 8000
CMD ["uvicorn","watchmen_ai.main:app","--host", "0.0.0.0", "--port", "8000"]






